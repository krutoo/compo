{
	"extends": "stylelint-config-standard",
	"rules": {
		"indentation": [
			"tab",
			{
				"except": [
					"value"
				]
			}
		],
		"max-empty-lines": 1,
		"number-leading-zero": "never",
		"at-rule-empty-line-before": "never",
		"declaration-bang-space-before": "never",
		"rule-empty-line-before": [
			"always",
			{
				"except": [
					"inside-block"
				]
			}
		]
	}
}
